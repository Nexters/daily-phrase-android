<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="16dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="16dp" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@id/gl_start"
        android:text="타이틀"/>

    <TextView
        android:id="@+id/tv_preview_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintStart_toStartOf="@id/gl_start"
        tools:text="본문 텍스트 미리보기"/>

    <ImageView
        android:id="@+id/iv_image"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginTop="8dp"
        android:background="@color/material_dynamic_secondary60"
        app:layout_constraintTop_toBottomOf="@id/tv_preview_text"
        app:layout_constraintStart_toStartOf="@id/gl_start"
        app:layout_constraintEnd_toEndOf="@id/gl_end" />

    <ImageView
        android:id="@+id/iv_view"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="16dp"
        android:background="@color/material_dynamic_secondary30"
        app:layout_constraintTop_toBottomOf="@id/iv_image"
        app:layout_constraintStart_toStartOf="@id/gl_start" />

    <TextView
        android:id="@+id/tv_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="@id/iv_view"
        app:layout_constraintStart_toEndOf="@id/iv_view"
        app:layout_constraintBottom_toBottomOf="@id/iv_view"
        tools:text="320"/>

    <ImageView
        android:id="@+id/iv_like"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="40dp"
        android:background="@color/material_dynamic_secondary30"
        app:layout_constraintTop_toTopOf="@id/tv_view"
        app:layout_constraintStart_toEndOf="@id/tv_view" />

    <TextView
        android:id="@+id/tv_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="@id/iv_like"
        app:layout_constraintStart_toEndOf="@id/iv_like"
        tools:text="10"/>

    <ImageView
        android:id="@+id/iv_bookmark"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="16dp"
        android:background="@color/material_dynamic_secondary30"
        app:layout_constraintTop_toTopOf="@id/iv_view"
        app:layout_constraintEnd_toStartOf="@id/tv_bookmark"/>

    <TextView
        android:id="@+id/tv_bookmark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/iv_view"
        app:layout_constraintEnd_toEndOf="@id/gl_end"
        tools:text="즐겨찾기"/>
</androidx.constraintlayout.widget.ConstraintLayout>